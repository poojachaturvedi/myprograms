#include<iostream>
using namespace std;
struct node
{
	int data;
	node *next;
}*first=NULL;
void display(struct node*p)
{
	while(p!=NULL)
	{
		cout<<p->data<<" ";
		p=p->next;
	}
}
void create(int A[],int n)
{
	int i;
	struct node*t,*last;
	//t-->temporary pointer for creating a node 
	//last-->for containing addrress of last node
    first=new node;
	first->data=A[0];
    first->next=NULL;
	last=first;
	for (i=1;i<n;i++)
	{   t=new node;
		t->data=A[i];
		t->next=NULL;
		last->next=t;
		last=t;
		
	}
}
int main()
{   int A[]={3,5,7,10,15};
     create(A,5);
     display(first);
	return 0;
}
